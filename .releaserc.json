{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          { "type": "feat", "release": "minor" },
          { "type": "fix", "release": "patch" },
          { "type": "perf", "release": "patch" },
          { "type": "docs", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "chore", "release": "patch" },
          { "type": "style", "release": false },
          { "type": "build", "release": false },
          { "type": "ci", "release": false }
        ],
        "presetConfig": {
          "types": [
            { "type": "feat", "section": "âœ¨ Features" },
            { "type": "fix", "section": "ğŸ› Bug Fixes" },
            { "type": "perf", "section": "ğŸš€ Performance Improvements" },
            { "type": "revert", "section": "â†©ï¸ Reverts" },
            { "type": "docs", "section": "ğŸ“ Documentation" },
            { "type": "style", "section": "ğŸ’„ Styles" },
            { "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
            { "type": "test", "section": "âœ… Tests" },
            { "type": "build", "section": "ğŸ‘· Build System" },
            { "type": "ci", "section": "ğŸ”§ Continuous Integration" },
            { "type": "chore", "section": "ğŸ”¨ Chores" },
            { "type": "revert", "section": "âª Reverts" },
            { "type": "init", "hidden": true },
            { "type": "wip", "hidden": true }
          ]
        }
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll the important changes of the project will be recorded here."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "pkgRoot": "dist",
        "tarballDir": "dist",
        "tarballFilename": "${name}-${version}.tgz"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "dist/*.tgz"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "dist/*.tgz", "label": "Release" },
          { "path": "CHANGELOG.md", "label": "Changelog" }
        ]
      }
    ]
  ]
}
